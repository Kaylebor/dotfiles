{{- if eq .chezmoi.os "darwin" }}
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.eveiga.load-ssh-keychain</string>
	<key>ProgramArguments</key>
	<array>
		<string>{{ joinPath .chezmoi.homeDir ".local" "bin" "load-ssh-keychain" }}</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StandardOutPath</key>
	<string>{{ joinPath .chezmoi.homeDir "Library" "Logs" "load-ssh-keychain.log" }}</string>
	<key>StandardErrorPath</key>
	<string>{{ joinPath .chezmoi.homeDir "Library" "Logs" "load-ssh-keychain.err.log" }}</string>
</dict>
</plist>
{{- end }}
