[tools]
ruby = "3"
node = "latest"
go = "latest"
python = "3.13.1"
java = "temurin-23"
elixir = "latest"
erlang = "latest"
rust = "stable"
deno = "latest"
bun = "latest"

[settings]
experimental = true
disable_tools = ["python"]

[env]
{{- if eq .chezmoi.os "linux" }}
{{- if eq .chezmoi.osRelease.idLike "arch" }}
KERL_CONFIGURE_OPTIONS="--with-odbc=/var/lib/pacman/local/unixodbc-$(pacman -Q unixodbc | cut -d' ' -f2)"
{{- end }}
{{- end }}
