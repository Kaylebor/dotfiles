// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Material Icon Theme",
  "vim_mode": false,
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": true
  },
  "assistant": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-pro-exp-02-05"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "context_servers": {
    "postgres-context-server": {
      "settings": {
        "database_url": "postgresql://kay:@localhost:5432/loyal_guru"
      }
    }
  },
  "language_models": {
    "google": {
      "available_models": [
        {
          "name": "gemini-2.0-flash",
          "display_name": "Gemini 2.0 Flash",
          "max_tokens": 1048576
        },
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini 2.0 Flash Experimental",
          "max_tokens": 1048576
        },
        {
          "name": "gemini-2.0-pro-exp-02-05",
          "display_name": "Gemini 2.0 Pro Experimental 02-05",
          "max_tokens": 2097152
        },
        {
          "name": "gemini-2.0-flash-thinking-exp-01-21",
          "display_name": "Gemini 2.0 Flash Thinking Experimental 01-21",
          "max_tokens": 1048576
        },
        {
          "name": "gemini-2.0-flash-lite-preview-02-05",
          "display_name": "Gemini 2.0 Flash Lite Preview 02-05",
          "max_tokens": 1048576
        }
      ]
    }
  },
  "ui_font_size": 14,
  "ui_font_family": "Iosevka Nerd Font",
  // "buffer_font_size": 14,
  "buffer_font_family": "Iosevka Nerd Font",
  "tab_size": 2,
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": [
          "-l"
        ]
      }
    },
    "font_family": "IosevkaTerm Nerd Font"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark Pro"
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "!ruby-lsp",
        "solargraph",
        "rubocop"
      ]
    },
    "HTML": {
      "prettier": {
        "allowed": false
      }
    },
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls"
      ],
      "prettier": {
        "allowed": false
      }
    },
    "JavaScript": {
      "prettier": {
        "allowed": false
      }
    }
  },
  "formatter": "language_server",
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "importModuleSpecifierPreference": "project-relative"
        }
      }
    },
    "solargraph": {
      "settings": {
        "use_bundler": false // Use system solargraph command
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false // Zed does not support pull-based diagnostics yet
        }
      }
    }
  }
}
