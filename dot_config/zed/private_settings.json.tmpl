// Zed shared settings managed by Chezmoi
// Device-specific fields (agent, context_servers, ui_font_size, theme, features, icon_theme) are preserved during merge
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "vim_mode": true,
  "ui_font_family": "Maple Mono NF",
  "buffer_font_family": "Maple Mono NF",
  "tab_size": 2,
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": [
          "-l"
        ]
      }
    },
    "font_family": "Maple Mono NF"
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "!solargraph",
        "ruby-lsp",
        "rubocop"
      ]
    },
    "HTML": {
      "formatter": "language_server"
    },
    "SQL": {
      "formatter": {
        "external": {
          "command": "pg_format"
        }
      }
    },
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls"
      ],
      "prettier": {
        "allowed": false
      }
    },
    "JavaScript": {
      "prettier": {
        "allowed": false
      }
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "formatter": "language_server",
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "importModuleSpecifierPreference": "project-relative"
        }
      }
    },
    "solargraph": {
      "settings": {
        "use_bundler": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    }
  }
}
