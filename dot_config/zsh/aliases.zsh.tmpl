alias q="exit"
{{- if lookPath "rg" }}
ALIASED_RG_OPTS='-P'
rg() {
  case $TERM_PROGRAM in
    *zed*)
      command rg $ALIASED_RG_OPTS --no-heading --line-number --column --with-filename "$@"
      ;;
    *)
      command rg $ALIASED_RG_OPTS "$@"
      ;;
  esac
}
{{- end }}
{{- if lookPath "clipboard" }}
alias cb="clipboard"
{{- end }}
{{- if lookPath "bat" }}
alias cat="bat"
{{- end }}
{{- if lookPath "delta" }}
alias diff="delta"
{{- end }}
