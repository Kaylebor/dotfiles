;; -*- lexical-binding: t; -*-
;; Meow modal editing configuration

(use-package meow 
  :ensure (:wait t)  ; Wait for package to fully load before continuing
  :after which-key   ; Ensure which-key is loaded first
  :demand t  ; Force immediate loading instead of lazy loading
  :init
  (defun meow-setup ()
    (setq meow-cheatsheet-layout meow-cheatsheet-layout-qwerty)
    (meow-motion-overwrite-define-key
     '("j" . meow-next)
     '("k" . meow-prev)
     '("<escape>" . ignore))
    (meow-leader-define-key
     ;; Use SPC (0-9) for digit arguments.
     '("1" . meow-digit-argument)
     '("2" . meow-digit-argument)
     '("3" . meow-digit-argument)
     '("4" . meow-digit-argument)
     '("5" . meow-digit-argument)
     '("6" . meow-digit-argument)
     '("7" . meow-digit-argument)
     '("8" . meow-digit-argument)
     '("9" . meow-digit-argument)
     '("0" . meow-digit-argument)
     '("/" . meow-keypad-describe-key)
     '("?" . meow-cheatsheet))
    (meow-normal-define-key
     '("0" . meow-expand-0)
     '("9" . meow-expand-9)
     '("8" . meow-expand-8)
     '("7" . meow-expand-7)
     '("6" . meow-expand-6)
     '("5" . meow-expand-5)
     '("4" . meow-expand-4)
     '("3" . meow-expand-3)
     '("2" . meow-expand-2)
     '("1" . meow-expand-1)
     '("-" . negative-argument)
     '(";" . meow-reverse)
     '("," . meow-inner-of-thing)
     '("." . meow-bounds-of-thing)
     '("[" . meow-beginning-of-thing)
     '("]" . meow-end-of-thing)
     '("a" . meow-append)
     '("A" . meow-open-below)
     '("b" . meow-back-word)
     '("B" . meow-back-symbol)
     '("c" . meow-change)
     '("d" . meow-delete)
     '("D" . meow-backward-delete)
     '("e" . meow-next-word)
     '("E" . meow-next-symbol)
     '("f" . meow-find)
     '("g" . meow-cancel-selection)
     '("G" . meow-grab)
     '("h" . meow-left)
     '("H" . meow-left-expand)
     '("i" . meow-insert)
     '("I" . meow-open-above)
     '("j" . meow-next)
     '("J" . meow-next-expand)
     '("k" . meow-prev)
     '("K" . meow-prev-expand)
     '("l" . meow-right)
     '("L" . meow-right-expand)
     '("m" . meow-join)
     '("n" . meow-search)
     '("o" . meow-block)
     '("O" . meow-to-block)
     '("p" . meow-yank)
     '("q" . meow-quit)
     '("Q" . meow-goto-line)
     '("r" . meow-replace)
     '("R" . meow-swap-grab)
     '("s" . meow-kill)
     '("t" . meow-till)
     '("u" . meow-undo)
     '("U" . meow-undo-in-selection)
     '("v" . meow-visit)
     '("w" . meow-mark-word)
     '("W" . meow-mark-symbol)
     '("x" . meow-line)
     '("X" . meow-goto-line)
     '("y" . meow-save)
     '("Y" . meow-sync-grab)
     '("z" . meow-pop-selection)
     '("'" . repeat)
     '("<escape>" . ignore))
    
    ;; Leader key bindings - avoid keypad strings to work with which-key
    (meow-leader-define-key
     ;; Use SPC (0-9) for digit arguments
     '("1" . meow-digit-argument)
     '("2" . meow-digit-argument)
     '("3" . meow-digit-argument)
     '("4" . meow-digit-argument)
     '("5" . meow-digit-argument)
     '("6" . meow-digit-argument)
     '("7" . meow-digit-argument)
     '("8" . meow-digit-argument)
     '("9" . meow-digit-argument)
     '("0" . meow-digit-argument)
     '("/" . meow-keypad-describe-key)
     '("?" . meow-cheatsheet)
     
     ;; Quick actions - single key for most common operations
     '("b" . consult-buffer)       ; buffer switch
     '("g" . magit-status)         ; git status
     '("x" . execute-extended-command)  ; M-x
     '("h" . help-command))        ; Help prefix
     ;; Prefix keymaps:
     ;; 'f' prefix is handled by file-map bound to C-c f
     ;; 'l' prefix is handled by ai-llm-map bound to C-c l
     ;; 'o' prefix is handled by org-map bound to C-c o
    
    ;; Additional useful bindings  
    (meow-normal-define-key
     '("M-?" . which-key-show-top-level)
     ;; Folding with TAB key - more standard
     '("TAB" . treesit-fold-toggle)))
  
  :config
  ;; Call setup and enable meow after package loads
  (meow-setup)
  
  ;; The keymaps are now defined in keybindings.el for better organization
  ;; We just need to create the aliases for Meow's keypad display
  (when (boundp 'ai-llm-map)
    (defalias 'meow-ai-llm-map ai-llm-map))
  (when (boundp 'file-map)
    (defalias 'meow-file-map file-map))
  (when (boundp 'org-map)
    (defalias 'meow-org-map org-map))
  
  ;; Ensure Meow doesn't interfere with vterm
  (add-hook 'vterm-mode-hook
            (lambda ()
              (setq-local meow-normal-state-keymap (make-sparse-keymap))
              (meow-insert-mode)))
  
  ;; Start in motion mode for read-only buffers
  (add-hook 'read-only-mode-hook
            (lambda ()
              (when read-only-mode
                (meow-motion-mode))))
  
  ;; Enable meow globally
  (meow-global-mode 1))

(provide 'meow-config)