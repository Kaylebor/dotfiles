;; helm icons support using nerd-icons
(elpaca (helm-icons 
         :host github 
         :repo "yyoncho/helm-icons")
  (use-package helm-icons
    :after nerd-icons
    :custom
    (helm-icons-provider 'nerd-icons)
    :config
    (helm-icons-enable)))

;; helm for incremental completion
(use-package helm :ensure t
  :after helm-icons  ; Load helm-icons first
  :delight
  :demand t  ; Load immediately, don't wait for keybindings
  :bind
  (("C-x C-f" . helm-find-files)
   ("C-x b" . helm-buffers-list)
   ("M-x" . helm-M-x))
  :custom
  (completions-detailed t)
  (elm-M-x-show-short-doc t)
  (helm-mode-fuzzy-match t)
  (helm-completion-in-region-fuzzy-match t)
  :config
  (helm-mode 1)
  (helm-popup-tip-mode))
(use-package helm-projectile :ensure t
  :after (helm projectile)  ; Ensure both are loaded first
  :demand t  ; Force immediate loading to avoid lazy loading issues
  :init
  ;; Ensure projectile uses helm before helm-projectile-on is called
  (with-eval-after-load 'projectile
    (setq projectile-completion-system 'helm))
  :config
  ;; Initialize helm-projectile - this replaces projectile commands with helm versions
  ;; This should now work because the keymap is already defined
  (helm-projectile-on))

