;; Custom VC-fd backend for fast file listing using fd
;; Wraps the built-in vc backend but uses 'fd' for file listing
(defun project-try-vc-fd (dir)
  "Try to detect a VC project for DIR, return vc-fd instance if fd is available."
  (when (executable-find "fd")
    (let ((vc-proj (project-try-vc dir)))
      (when vc-proj
        (list 'vc-fd (nth 1 vc-proj) (nth 2 vc-proj))))))

(cl-defmethod project-root ((project (head vc-fd)))
  "Return project root for vc-fd backend."
  (nth 2 project))

(cl-defmethod project-files ((project (head vc-fd)) &optional dirs)
  "Use fd for fast file listing in vc-fd projects."
  (mapcan
   (lambda (dir)
     (let ((default-directory (expand-file-name (file-name-as-directory dir))))
       (split-string (shell-command-to-string "fd . -0") "\0" t)))
   (or dirs (list (project-root project)))))

(cl-defmethod project-external-roots ((project (head vc-fd)))
  "Return external roots for vc-fd projects."
  nil)

;; Add with lower priority than project-try-vc (which is -100), so we wrap it
(add-hook 'project-find-functions #'project-try-vc-fd -90)

