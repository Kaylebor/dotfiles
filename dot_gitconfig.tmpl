[gpg]
  format = ssh
[gpg "ssh"]
  alllowedSignersFile = ~/.ssh/allowed_signers
  {{- if eq .chezmoi.os "darwin" }}
  program = "/Applications/1Password.app/Contents/MacOs/op-ssh-sign"
  {{- else if eq .chezmoi.os "linux" }}
  program = "/opt/1Password/op-ssh-sign"
  {{- end }}
[init]
  defaultBranch = main
[commit]
  gpgSign = true
  template = ~/.gitmessage
[user]
  name = "Ender Veiga Bueno"
  email = "letstalk@ender.codes"
  signingkey = {{ template "onepassword_safe" dict "opPath" "op://Private/Personal Key/public key" "envVar" "CHEZMOI_GIT_SIGNING_KEY" "context" . }}
[github]
  user = "Kaylebor"
[include]
  path = ~/.local/share/delta/catppuccin.gitconfig
[includeIf "gitdir/i:~/work/"]
  path = ~/work/.gitconfig
[push]
  autoSetupRemote = true
  default = simple
[core]
  pager = delta
  excludesfile = ~/.gitignore
[interactive]
  diffFilter = delta --color-only
[diff]
  external = difft
[delta]
  navigate = true
  side-by-side = true
  features = catppuccin-frappe
[merge]
  conflictStyle = zdiff3
[diff]
  colorMoved = default
[status]
  short = true
  branch = true
[format]
  pretty = format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
[log]
  date = relative
  abbrevCommit = true
  mailmap = true
[alias]
  showd = show --ext-diff
